{
  "name": "tripitaka",
  "version": "2.1.1",
  "description": "A low dependency, no frills logger, designed to play nicely with tools like fluentd and Elasticsearch",
  "main": "index.js",
  "dependencies": {
    "dot-prop": "^6.0.1",
    "json-stringify-safe": "^5.0.1"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-esnext": "^4.1.0",
    "husky": "^5.2.0",
    "nyc": "^15.1.0",
    "zunit": "^3.2.0"
  },
  "scripts": {
    "coverage": "nyc --report html --reporter lcov --reporter text-summary zUnit",
    "lint": "eslint .",
    "test": "zUnit",
    "prepare": "husky install"
  },
  "types": "index.d.ts",
  "author": "Stephen Cresswell",
  "license": "ISC",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "keywords": [
    "log",
    "logging",
    "logger",
    "simple",
    "winston",
    "bunyan",
    "alternative",
    "json",
    "stdout",
    "stderr",
    "fluentd",
    "elasticsearch",
    "elk",
    "mapping explosion"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/acuminous/tripitaka.git"
  },
  "bugs": {
    "url": "https://github.com/acuminous/tripitaka/issues"
  },
  "homepage": "https://acuminous.github.io/tripitaka/",
  "zUnit": {
    "pollute": true
  }
