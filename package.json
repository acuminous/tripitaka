{
  "name": "tripitaka",
  "version": "3.0.2",
  "description": "A low dependency, no frills logger, designed to play nicely with tools like fluentd and Elasticsearch",
  "main": "index.js",
  "dependencies": {
    "chalk": "^4.1.2",
    "dot-prop": "^6.0.1",
    "json-stringify-safe": "^5.0.1"
  },
  "devDependencies": {
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.2",
    "nyc": "^15.1.0",
    "prettier": "2.6.2",
    "zunit": "^3.2.0"
  },
  "scripts": {
    "coverage": "nyc --report html --reporter lcov --reporter text-summary zUnit",
    "lint": "npx prettier --check .",
    "lint-staged": "lint-staged",
    "test": "zUnit",
    "prepare": "husky install"
  },
  "types": "index.d.ts",
  "author": "Stephen Cresswell",
  "license": "ISC",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "keywords": [
    "log",
    "logging",
    "logger",
    "simple",
    "winston",
    "bunyan",
    "alternative",
    "json",
    "stdout",
    "stderr",
    "fluentd",
    "elasticsearch",
    "elk",
    "mapping explosion"
  ],
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/acuminous/tripitaka.git"
  },
  "bugs": {
    "url": "https://github.com/acuminous/tripitaka/issues"
  },
  "homepage": "https://acuminous.github.io/tripitaka/",
  "zUnit": {
    "pollute": true
  }
}
